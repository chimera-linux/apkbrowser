[branding]
name = Chimera Linux
logo = chimera-logo.svg
favicon = favicon

[repository]
url = https://repo.chimera-linux.org
branches = current
arches = aarch64,ppc64le,riscv64,x86_64
repos = main,contrib

default-branch = current
default-arch = x86_64

[external]
git-commit = https://github.com/chimera-linux/cports/commit/{commit}
git-repo = https://github.com/chimera-linux/cports
build-log = https://build.chimera-linux.org
website = https://chimera-linux.org

[database]
path = db

[settings]
branch = yes
flagging = no
apk = apk
apkindex-cache = apkindex_cache
